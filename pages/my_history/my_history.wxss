.his_item {
  display: flex;
  border-radius: 10px;
  margin: 20rpx;
  padding-right: 20rpx;
}
.his_item .his_picture {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F5F5F5;
  margin: 20rpx;
  border-radius: 10px;
}
.his_item .his_picture image {
  height: 120rpx;
  width: 80%;
}
.his_item .item_right {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.his_item .item_right .item_right_row1 {
  font-weight: bolder;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.his_item .item_right .item_right_row2 {
  display: flex;
  justify-content: space-between;
}
.his_item .item_right .item_right_row2 .createTime {
  font-size: 24rpx;
}
.his_item .item_right .item_right_row2 .btn {
  display: flex;
  justify-content: center;
  align-items: center;
}
